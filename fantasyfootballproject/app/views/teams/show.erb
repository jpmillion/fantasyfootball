
<div style="text-align: center;">
<h1><%= @team.name.titleize %></h1>
<h3>Team Roster</h3><br><br>
<% @team.players.each do |player| %>
    <p><%= player.name.titleize %><br><br>
    <%= player.position.titleize %></p>
    <form action="/players" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="hidden" name="player_id" value="<%= player.id %>">
        <input type="hidden" name="team_id" value="<%= @team.id %>">
        <input type="submit" value="Remove Player"><br><br><br><br>
    </form>

<% end %>
<br><br>
<div style="float: left;">
<form action="/players" method="post">
    <h5>Add Player to Roster</h5><br>
    <input type="text" name="name" placeholder="Enter Player Name"><br><br>
    
    <% ['Running Back', 'Quarterback', 'Receiver'].each do |position| %>
        <p><input type="radio" name="position" value="<%= position %>"><%= position %></p>
    <% end %>

    <input type="hidden" name="team_id" value="<%= @team.id %>">
    
    <input type="submit" value="Add Player"><br><br>
</form>
</div>
<br><br>
<div style="float: right;">
<p><a href="/teams/<%= @team.id %>/edit">Change Team Name</a><br><br>
<a href="/leagues/<%= @team.league.id%>">League Home</a><br><br>
<a href="/users/<%= current_user.id %>">Home</a><br><br>
<a href="/logout">Log Out</a></p>

</div>
</div>